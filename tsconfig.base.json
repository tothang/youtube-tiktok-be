{
    "include": [
        "**/*.js",
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "**/build",
        "**/dist",
        "dangerfile.ts",
        "**/*.test.ts",
        "**/*.mock.ts"
    ],
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2020"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": false,
        "paths": {
            "*": [
                "app/*",
                "types/*"
            ]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2020"
    }
}